
@{
    ViewBag.Title = "Roller";
}
@using System.Web.Security;

@model List<string>

@section body{
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".deleteRole").click(function () {
                var sonuc = confirm("Kayit silinsin mi?");
                if (sonuc) {
                    var ra = $(this).attr("data-rolName");
              
                    $.ajax({
                        type: "POST",
                        url: "/Role/DeleteRole?RoleName=" + ra,
                      
                        success: function () {
                            alert("Kayit silindi");
                            window.location.replace("/Role/Index");
                        },
                        error: function () {
                            alert("Kayit silme sirasinda hata olustu.");
                        }
                    })
                }
            });
        });
    </script>
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Roller Listesi
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href=/Role/AddRole class="btn btn-success" role="button">Role Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Role Adı</th>

                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (string rl in Model)
                                {
                                    <tr>

                                        <td>@rl</td>

                                        <td><a href="#" class="btn btn-danger deleteRole" data-rolName="@rl">Sil</a></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

