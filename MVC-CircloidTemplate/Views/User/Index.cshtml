
@{
    ViewBag.Title = "Uyeler";
}
@using System.Web.Security
@model MembershipUserCollection

@section body
{
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>
    <script>

        $(".userDelete").click(function () {

            var sonuc = confirm("Kayit silinsin mi?");
            if (sonuc) {
                var ua = $(this).data("username");
                $.ajax({
                    type: "POST",
                    url: "/User/DeleteUser/" + ua, 
                    success: function () {
                        alert("Kayit silindi");
                        window.location.replace("/User/Index");
                    },
                    error: function () {
                        alert("Kayit silme sirasinda hata olustu.");
                    }
                });
            }
        });
        $(".roles").click(function () {

            var ua = $(this).attr("data-userName");

            $.ajax({
                type: "POST",
                url: "/User/UserRole/",
                data: { userName: ua },
                success: function (rol) {
                    alert(rol);
                },
                error: function () {
                    alert("error")
                }
            })
        })
     
           
      

    </script>
}

@section head
{
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".addRole").on('click', function () {
                const userName = $(this).attr("data-userName");

                console.log(userName);
                window.location.href = "/User/AssingRole?userName=" + userName
            });
        });

       
       
    </script>

}


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Üyeler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/User/AddUser" class="btn btn-success rounded" role="button">Kullanıcı Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Email</th>
                                <th>Kayıt Tarihi</th>
                                <th>Son Giriş Tarihi</th>
                                <th>Rolleri</th>
                                <th>RolAta</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MembershipUser mu in Model)
                            {
                                <tr>
                                    <td>@mu.UserName</td>
                                    <td>@mu.Email</td>
                                    <td>@mu.CreationDate</td>
                                    <td>@mu.LastLoginDate</td>
                                    <td><a class="btn btn-primary roles" data-userName="@mu.UserName">Rolleri</a></td>
                                    <td><a class="btn btn-primary addRole" data-userName="@mu.UserName">Rol Ekle</a></td>
                                    <td><a href="#" class="btn btn-danger userDelete" data-userName="@mu.UserName">Sil</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



